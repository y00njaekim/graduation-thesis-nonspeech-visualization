{
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "arrowParens": "always",
  "overrides": [
    {
      "files": "*.html",
      "options": {
        "printWidth": 120,
        "htmlWhitespaceSensitivity": "ignore",
        "vueIndentScriptAndStyle": true
      }
    },
    {
      "files": "*.css",
      "options": {
        "printWidth": 120,
        "singleQuote": false
      }
    },
    {
      "files": "*.js",
      "options": {
        "printWidth": 100,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "all",
        "arrowParens": "always"
      }
    }
  ]
}